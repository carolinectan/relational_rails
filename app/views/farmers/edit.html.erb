<h1>Edit <%= @farmer.name  %></h1>

<%= form_with url: "/farmers/#{@farmer.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %><br><br>
  <%= form.label :owns_land, 'Owns Land' %>
  <%= form.check_box :owns_land %><br><br>
  <%= form.label :age %>
  <%= form.text_field :age %><br>
  <%= form.submit "Edit Farmer #{@farmer.name}" %>
<% end %>
