<h1><%= @farm.name %>'s Farmers</h1>

<%= button_to "Create New Farmer", "/farms/#{@farm.id}/farmers/new", method: :get %>

<% @farmers.each do |farmer| %>
  <h3><%= farmer.name %></h3>
  <p>Age: <%= farmer.age %></p>
  <p>Owns Land: <%= farmer.owns_land %></p>
  <%= button_to "Delete Farmer #{farmer.name}", "/farmers/#{farmer.id}", method: :delete %>
<% end %>
