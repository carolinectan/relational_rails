<h1>Add a New Garden</h1>

<%= form_with url: '/gardens', method: :post, local: true do |form| %>
  <%= form.label :name, 'Name' %>
  <%= form.text_field :name %><br><br>
  <%= form.label :irrigation, 'Garden Has Irrigation' %>
  <%= form.check_box :irrigation %><br><br>
  <%= form.label :plant_capacity, 'Plant Capacity' %>
  <%= form.number_field :plant_capacity %><br><br>

  <%= form.submit 'Add Garden' %>
<% end %>
