<h1>All Gardens</h1>
<%= button_to "Add New Garden", "/gardens/new", method: :get %>

<% @gardens.each do |garden| %>
<div class="index-item">
  <h3><a href='/gardens/<%= garden.id %>'><%= garden.name %></a> (<%= garden.created_at %>)</h3>
  <%= link_to "Edit #{garden.name}", "gardens/#{garden.id}/edit"  %>
  <%= link_to "Delete #{garden.name}", "/gardens/#{garden.id}", method: :delete %>
</div>
<% end %>
