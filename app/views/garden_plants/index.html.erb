<h1><%= @garden.name %></h1>

<%= link_to "sort by name", "/gardens/#{@garden.id}/plants?sort=alpha" %>
<%= link_to "Add New Plant", "/gardens/#{@garden.id}/plants/new", method: :get %>

  <% @plants.each do |plant| %>
  <div class="index-item">
    <h2><%= plant.name %></h2>
    <p>Edible: <%= plant.edible %></p>
    <p>Mature Height: <%= plant.mature_height %></p>
    <%= link_to "Edit #{plant.name}", "/plants/#{plant.id}/edit" %>
    <%= link_to "Delete #{plant.name}", "/plants/#{plant.id}", method: :delete %>
  </div>
  <% end %>
