<h1>Add New Plant to <%= @garden.name %></h1>

<%= form_with url: "/gardens/#{@garden.id}/plants", method: :post, local: true do |form| %>
  <%= form.label :name, "Name" %>
  <%= form.text_field :name %>
  <%= form.label :edible, "Edible" %>
  <%= form.check_box :edible %>
  <%= form.label :mature_height, "Mature Height" %>
  <%= form.number_field :mature_height %>

  <%= form.submit "Add Plant" %>

<% end %>
